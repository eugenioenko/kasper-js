{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "@kasper/*": ["src/*"]
    },
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true
  }
}
